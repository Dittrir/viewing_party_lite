<%= form_with url: search_path, local: true do |form| %>
  <%= form.label :search, 'Search for Movie by title:' %>
  <%= form.text_field :search %>
  <%= form.hidden_field :id, value: params[:id] %>
  <%= form.submit 'Search' %>
<% end %>

<% if @found_movie %>
  Movie <%= @movie[:original_title] %> was found! </h5>
<% end %>
